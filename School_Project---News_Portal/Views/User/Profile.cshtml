
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model RegisterModel

<div class="card">
    <div class="card-header bg-success text-light">
        <h1>User Profile</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data" class="p-2 col-8">
                <div class="row">
                    <div class="m-2 col">
                        <label asp-for="UserName">UserName</label>
                        <input asp-for="UserName" class="form-control" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="m-2 col">
                        <label asp-for="FullName">FullName</label>
                        <input asp-for="FullName" class="form-control" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="m-2 col">
                        <label asp-for="Email">Email</label>
                        <input type="email" asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="m-2 col">
                        <label asp-for="PhotoFile" >Photo</label>
                        <input class="form-control" asp-for="PhotoFile" placeholder="Photo" accept="image/png, image/gif, image/jpeg">

                    </div>
                </div>
                <div class="row">
                    <div class="m-2 col">
                        <label asp-for="Password">Password</label>
                        <input type="password" class="form-control"
                               asp-for="Password" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="m-2 col">
                        <label asp-for="PasswordConfirm">Password Confirm</label>
                        <input type="password" class="form-control"
                               asp-for="PasswordConfirm" placeholder="Confirm Password">
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="m-2 col">
                        <input type="submit" value="Update User" class="btn btn-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-danger btn-sm">Cancel</a>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>

