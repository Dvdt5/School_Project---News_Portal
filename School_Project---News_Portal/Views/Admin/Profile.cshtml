@using System.Security.Claims

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model RegisterModel

<div class="card">
    <div class="card-header bg-warning text-light">
        <h1>Profile Info</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-4 align-content-center text-center">
                <div class="col">
                    <img class="img-profile rounded col-8" src="~/userPhotos/@User.Claims.FirstOrDefault(c => c.Type == "PhotoUrl").Value">
                </div>
                <div class="col">
                    <span class="badge bg-success text-white m-4 p-2">@User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role).Value</span>
                </div>
                     

            </div>
            <form asp-controller="Admin" asp-action="Profile" method="post" enctype="multipart/form-data" class="p-2 col-8">
                <div class="row">
                    <div class="m-2 col">
                        <label asp-for="UserName">UserName</label>
                        <input asp-for="UserName" class="form-control" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="m-2 col">
                        <label asp-for="FullName">FullName</label>
                        <input asp-for="FullName" class="form-control" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="m-2 col">
                        <label asp-for="Password">Password</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="m-2 col">
                        <label asp-for="PasswordConfirm">Confirm Password</label>
                        <input type="password" class="form-control form-control-user"
                               asp-for="PasswordConfirm" placeholder="Confirm Password">
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="m-2 col">
                        <label asp-for="Email">Email</label>
                        <input type="email" asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="m-2 col">
                        <label asp-for="PhotoFile">Upload Photo</label>
                        <input class="form-control" asp-for="PhotoFile" placeholder="Photo" accept="image/png, image/gif, image/jpeg">
                    </div>
                </div>

                <div class="row">
                    <div class="m-2 col">
                        <input type="submit" id="updateUserBtn" value="Update User" class="btn btn-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-danger btn-sm">Cancel</a>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial">
}


