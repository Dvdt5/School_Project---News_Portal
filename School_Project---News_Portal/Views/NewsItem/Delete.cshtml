
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model NewsItemModel

<div class="card">
    <div class="card-header bg-danger text-light"><h1>Delete News Item</h1></div>
    <div class="card-body">
        <h4>Do you want to delete @Model.Title ?</h4>
        <div class=" col-md-5 p-4">
            <form method="post" asp-controller="NewsItem" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-sm p-2" />
                <a asp-action="Index" class="btn btn-primary btn-sm p-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
