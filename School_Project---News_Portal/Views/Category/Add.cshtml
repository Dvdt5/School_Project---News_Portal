
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model CategoryModel

<div class="card">
    <div class="card-header bg-success text-light">
        <h1>Add Category</h1>
    </div>
    <div class="card-body">
        <div class=" col-md-5 p-4">
            <form asp-controller="Category" asp-action="Add" method="post">
                <div class="mb-2">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                    <input asp-for="IsActive" class="form-check-inline" />
                </div>
                <div class="mb-2">
                    <input type="submit" value="Add Category" class="btn btn-primary btn-sm" />
                    <a asp-action="Index" class="btn btn-danger btn-sm">Cancel</a>
                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

